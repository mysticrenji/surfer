# Backend Dockerfile
FROM golang:1.21-alpine AS backend-builder

WORKDIR /app

COPY go.mod go.sum ./
RUN go mod download

COPY backend/ ./backend/

RUN CGO_ENABLED=0 GOOS=linux go build -o /surfer-backend ./backend/cmd/main.go

# Final backend image
FROM alpine:latest

RUN apk --no-cache add ca-certificates

WORKDIR /root/

COPY --from=backend-builder /surfer-backend .

EXPOSE 8080

CMD ["./surfer-backend"]
